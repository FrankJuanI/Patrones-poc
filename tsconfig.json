{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es6",                           /* Set ECMAScript version to ES6 */
    "module": "commonjs",                      /* Use CommonJS module system */
    "outDir": "./dist",                        /* Output directory for compiled JavaScript */
    "rootDir": "./src",                        /* Root directory for TypeScript files */
    "strict": true,                            /* Enable all strict type-checking options */
    "esModuleInterop": true,                   /* Ensures compatibility with CommonJS modules */
    "forceConsistentCasingInFileNames": true,  /* Ensure consistent casing in file names */
    
    /* Type Checking */
    "skipLibCheck": true,                      /* Skip type checking for .d.ts files */
    "resolveJsonModule": true,   /* Permitir importar JSON */
  }
}
